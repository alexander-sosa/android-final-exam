<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InscripcionActivity"
    android:orientation="vertical"
    android:id="@+id/llInscripciones"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lista"
            android:textSize="20dp"
            android:layout_weight="1"
            android:id="@+id/btListaInscripciones"
            android:onClick="ocInscripcionMain"
            android:background="#20EA7A"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nuevo..."
            android:textSize="20dp"
            android:layout_weight="1"
            android:id="@+id/btNuevaInscripcion"
            android:onClick="ocInscripcionMain"
            android:background="#91FFC2"
            />
    </LinearLayout>

</LinearLayout>